  <body>
    <header class="topbar">
      <div class="fill">
        <div class="container">
          <a href="/" class="brand">Sample App</a>
          <ul class="nav">
            <li><%= link_to "Home", '#' %></li>
            <li><%= link_to "Help", '#' %></li>
            <li><%= link_to "Sign in", '#' %></li>
          </ul>
        </div>
      </div>
    </header>

    <div class="container">
      <div class="hero-unit">
          <%= yield %>
      </div>
    </div>
  </body>
</html>